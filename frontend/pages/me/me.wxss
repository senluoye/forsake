.app {
	background-color: #FBEAE9;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.notice {
	float: right;
}

.top {
	margin-top: 50rpx;
	height: 180rpx;
	width: 660rpx;
	background-color: white;
	border-radius: 20px 20px 0px 0px;
	/* margin-bottom: 30rpx; */
}

.top-title {
	height: 100%;
	display: flex;
	align-items: center;
	margin-left: 60rpx;
}

.skull {
	width: 150rpx;
	height: 150rpx;
	margin-top: 60rpx;
}

.name {
	font-size: 36rpx;
	line-height: 48rpx;
	color: #333;
	font-weight: bold;
}

.block {
	display: block;
	width: 660rpx;
	border-top-style: solid;
	border-top-color: #FBEAE9;
	border-bottom-style: solid;
	border-bottom-color: #FBEAE9;
	/* margin-bottom: 32rpx; */
}

.operator {
	width: 660rpx;
}

.operator-item {
	font-size: 25rpx;
}

