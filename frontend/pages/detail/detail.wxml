<!--pages/detail/detail.wxml-->
<view>
	<view wx:if="{{id === 0}}">
		数据不存在
	</view>
	<view wx:else>
		<t-message id="t-message" />
		<!-- 顶栏 -->
		<scroll-view>
			<view class="topic">
				<t-avatar class="avatar" image="{{dynamic.avatarUrl}}" />
				<view class="top-center">
					<view class="t" />
					<span class="name">{{dynamic.nickName}}</span>
					<view class="t1" />
					<span class="date">{{dynamic.updateAt}}</span>
				</view>
				<view class="guanzhu">
					<button class="guanzhu-btn">+ 关注</button>
				</view>
			</view>
			<!-- 主题内容 -->
			<view class="main-content" bindtap="goDetail">
				<!-- 标题 -->
				<view class=" tital">{{dynamic.title}}</view>
				<!-- 内容 -->
				<view class="content">
					<text>
						{{dynamic.content}}
					</text>
				</view>
				<!-- 照片/视频 -->
				<view class="image-content">
					<view wx:for="{{dynamic.dynamicFileList}}" wx:for-item="file" wx:key="id">
						<t-image shape="round" src="{{file.path}}" mode="aspectFill" width="110" height="110" style="margin-left: 10rpx;" />
					</view>
				</view>
			</view>
		</scroll-view>
		<!-- 操作 -->
		<footer />
	</view>
</view>